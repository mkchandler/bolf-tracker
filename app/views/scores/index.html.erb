<h1>Listing scores</h1>

<table>
  <tr>
    <th>Player</th>
    <th>Game</th>
    <th>Points</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @scores.each do |score| %>
  <tr>
    <td><%= score.player_id %></td>
    <td><%= score.game_id %></td>
    <td><%= score.points %></td>
    <td><%= link_to 'Show', score %></td>
    <td><%= link_to 'Edit', edit_score_path(score) %></td>
    <td><%= link_to 'Destroy', score.id, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

