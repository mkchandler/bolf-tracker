<p id="notice"><%= notice %></p>

<p>
  <strong>Game date:</strong> <%= @game.game_date.strftime("%m/%d/%Y") %>
</p>

<h2>Scores</h2>
<div id="scores">
<table>
  <thead>
    <tr>
      <th>Player</th>
      <th>Score</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
  <% @game.scores.each do |score| %>
    <tr>
      <td><%= score.player.name %></td>
      <td><%= score.points %></td>
      <td>
        <%= link_to 'Edit', edit_game_score_path(@game, score) %>
        <%= link_to 'Delete', game_score_path(@game, score), :confirm => 'Are you sure?', :method => :delete %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>
</div>
<br>
<fieldset>
  <legend><strong>Add Score</strong></legend>
<% form_for [@game, Score.new()] do |f| %>
  <div class="field">
    <%= f.label :player_id %><br />
    <%= select("score", "player_id", Player.all.collect {|p| [ p.name, p.id ] }, :prompt => false) %>
  </div>
  <div class="field">
    <%= f.label :points %><br />
    <%= f.text_field :points %>
  </div>
  <div class="actions">
    <%= f.submit "Add Score" %>
  </div>
<% end %>
</fieldset>
<br>
<%= link_to 'Edit', edit_game_path(@game) %> |
<%= link_to 'Back', games_path %>